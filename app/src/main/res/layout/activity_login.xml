<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ic"
                android:layout_width="179.94dp"
                android:layout_height="71.27dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:alpha="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/icon0"
                android:layout_width="160.03dp"
                android:layout_height="230.05dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:alpha="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_chef" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/login"
                android:textColor="@color/main_color"
                android:textSize="@dimen/font_size_large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/pin_request"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/t1"
                    style="@style/CircularButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/t2"
                    style="@style/CircularButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/t3"
                    style="@style/CircularButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/t4"
                    style="@style/CircularButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/t5"
                    style="@style/CircularButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/t6"
                    style="@style/CircularButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:columnCount="3"
                    android:rowCount="4">

                    <Button
                        android:id="@+id/button1"
                        style="@style/CircularButton"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:text="1" />

                    <Button
                        android:id="@+id/button2"
                        style="@style/CircularButton"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:text="2" />

                    <Button
                        android:id="@+id/button3"
                        style="@style/CircularButton"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:text="3" />

                    <Button
                        android:id="@+id/button4"
                        style="@style/CircularButton"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:text="4" />

                    <Button
                        android:id="@+id/button5"
                        style="@style/CircularButton"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:text="5" />

                    <Button
                        android:id="@+id/button6"
                        style="@style/CircularButton"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:text="6" />

                    <Button
                        android:id="@+id/button7"
                        style="@style/CircularButton"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:text="7" />

                    <Button
                        android:id="@+id/button8"
                        style="@style/CircularButton"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:text="8" />

                    <Button
                        android:id="@+id/button9"
                        style="@style/CircularButton"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:text="9" />

                    <ImageButton
                        android:id="@+id/button_close"
                        style="@style/CircularBackButton"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:src="@drawable/ic_exit" />

                    <Button
                        android:id="@+id/button0"
                        style="@style/CircularButton"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:text="0" />

                    <ImageButton
                        android:id="@+id/button_clear"
                        style="@style/CircularButton"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:src="@drawable/ic_delete"

                        />
                </GridLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:text="Try Demo"
                android:background="@drawable/round_button"
            android:textColor="@color/main_color"
            android:padding="@dimen/font_size_medium" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginHorizontal="20dp"

                    android:src="@drawable/ic_settings"/>
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginHorizontal="20dp"

                    android:src="@drawable/world"/>
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/ic_phone"/>
            </LinearLayout>




        </LinearLayout>
    </LinearLayout>


</LinearLayout>